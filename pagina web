  <script>
    function showTab(tabId) {
      document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
      document.getElementById(tabId).classList.add('active');
    }

    function buscarLibro() {
      let input = document.getElementById("buscador").value.toLowerCase();
      let todasLasSecciones = document.querySelectorAll(".tab-content");

      todasLasSecciones.forEach(seccion => {
        let libros = seccion.querySelectorAll(".book-item");
        let hayCoincidencia = false;

        libros.forEach(libro => {
          let titulo = libro.querySelector("h4").textContent.toLowerCase();
          if (titulo.includes(input)) {
            libro.style.display = "block";
            hayCoincidencia = true;
          } else {
            libro.style.display = "none";
          }
        });

        seccion.style.display = (input === "" || hayCoincidencia) ? "block" : "none";
      });
    }

    const frases = [
      "El que lee mucho y anda mucho, ve mucho y sabe mucho. – Miguel de Cervantes",
      "Un libro es un sueño que tienes en tus manos. – Neil Gaiman",
      "Leer es soñar con los ojos abiertos. – Anónimo",
      "Los libros son espejos: sólo ves en ellos lo que ya tienes dentro. – Carlos Ruiz Zafón",
      "Donde se queman libros, se terminan quemando personas. – Heinrich Heine",
      "Aprender a leer es encender un fuego; cada sílaba que se deletrea es una chispa. – Victor Hugo",
      "La lectura es la llave del conocimiento. – Anónimo",
      "Cada libro es un mundo esperando a ser descubierto. – Anónimo"
    ];

    function mostrarFrase() {
      const ahora = new Date();
      const baseTime = new Date('2024-01-01').getTime();
      const ahoraTime = ahora.getTime();
      const dias = Math.floor((ahoraTime - baseTime) / (1000 * 60 * 60 * 24));
      const index = Math.floor(dias / 2) % frases.length;
      document.getElementById("frase").textContent = frases[index];
    }

    mostrarFrase();

    function ampliarImagen(imagen) {
      const modal = document.getElementById("imagenModal");
      const imagenAmpliada = document.getElementById("imagenAmpliada");
      imagenAmpliada.src = imagen.src;
      modal.style.display = "block";
    }

    function cerrarModal() {
      document.getElementById("imagenModal").style.display = "none";
    }

    // CHAT - Firebase
    const chatRef = db.ref("club-lectura-chat");
    const form = document.getElementById("chat-form");
    const chatBox = document.getElementById("chat-box");

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const nombre = document.getElementById("nombre").value.trim();
      const mensaje = document.getElementById("mensaje").value.trim();

      if (nombre && mensaje) {
        const ahora = new Date().toLocaleTimeString();
        chatRef.push({
          nombre,
          mensaje,
          hora: ahora
        });
        form.reset();
      }
    });

    chatRef.on("child_added", function (data) {
      const msg = data.val();
      const mensajeElemento = document.createElement("p");
      mensajeElemento.innerHTML = `<strong>${msg.nombre}:</strong> ${msg.mensaje} <span style="color:#aaa;font-size:0.8em;">(${msg.hora})</span>`;
      chatBox.appendChild(mensajeElemento);
      chatBox.scrollTop = chatBox.scrollHeight;
    });
  </script>

